NEXT_PUBLIC_DONATELINK_ADDRESS=

# CCIP Receiver on Base Sepolia
NEXT_PUBLIC_CCIP_RECEIVER_ADDRESS=

# CCIP Senders on source chains
NEXT_PUBLIC_CCIP_SENDER_ETH=
NEXT_PUBLIC_CCIP_SENDER_ARB=
NEXT_PUBLIC_CCIP_SENDER_OP=

# -- Token Addresses (Base Sepolia) -------------------------------------------
